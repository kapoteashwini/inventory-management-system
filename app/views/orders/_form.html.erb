<%= form_with(model: @order, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :customer_id %>
    <%= form.collection_select :customer_id, @customers, :id, :name, { prompt: 'Select Customer' }, { class: 'form-control' } %>

  </div>

  <div class="form-group">
    <%= form.label :status %>
    <%= form.select :status, Order.statuses.keys.map { |status| [status.humanize, status] }, { prompt: 'Select Status' }, { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= form.label :total_amount %>
    <%= form.text_field :total_amount, class: 'form-control' %>
  </div>

  <h2></h2>
  <div id="order_items">
    <%= form.fields_for :order_items do |item_form| %>
      <%= render 'order_item_fields', f: item_form %>
    <% end %>
  </div>

  <div class="form-group mt-3 d-flex">
    <%= link_to_add_association 'Add Item', form, :order_items, class: "btn btn-outline-primary btn-sm mr-2" %>
    <%= form.submit 'Save Order', class: 'btn btn-success btn-sm' %>
  </div>
<% end %>
